<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/textView"
    android:layout_toEndOf="@+id/textView"

    tools:context="com.dominicmortel.myapplication.gameScreen"
    android:id="@+id/pic00"
    android:onClick="pic00click"
    android:weightSum="1">

    <TextView android:text="@string/tacoPlaceholder" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0" />



    <LinearLayout
        android:layout_width="211dp"
        android:layout_height="match_parent"
        android:layout_weight="2.14">
     <ImageButton
        android:layout_width="161dp"
        android:layout_height="238dp"
        android:id="@+id/imageButton"
        android:clickable="true"
        android:src="@drawable/taco0"
        android:longClickable="false"
        android:scaleType="fitStart"
        android:background="#00ffffff"
        android:onClick="pic00click"
        android:layout_gravity="top" />

    <ImageButton
        android:layout_width="199dp"
        android:layout_height="199dp"
        android:id="@+id/pic01"
        android:src="@drawable/taco1"
        android:scaleType="fitStart"
        android:onClick="pic01click"
        android:layout_gravity="top|center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/pointsCounterView"
        android:layout_row="17"
        android:layout_column="0"
        android:layout_gravity="left|right" />

</LinearLayout>
